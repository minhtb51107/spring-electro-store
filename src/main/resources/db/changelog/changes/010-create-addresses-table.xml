<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="20251120-03-create-addresses" author="minh">
        <createTable tableName="addresses">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_address_customer" referencedTableName="customers" referencedColumnNames="id"/>
            </column>
            <column name="receiver_name" type="VARCHAR(100)">
                 <constraints nullable="false"/>
            </column>
             <column name="receiver_phone" type="VARCHAR(20)">
                 <constraints nullable="false"/>
            </column>
            <column name="street_address" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ward" type="VARCHAR(100)"/>
            <column name="district" type="VARCHAR(100)"/>
            <column name="province" type="VARCHAR(100)"/>
            <column name="is_default" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>
    </changeSet>
</databaseChangeLog>