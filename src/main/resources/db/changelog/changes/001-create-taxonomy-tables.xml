<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251117-01-create-brands-table" author="minh">
        <createTable tableName="brands">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="slug" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="logo_url" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="20251117-02-create-categories-table" author="minh">
        <createTable tableName="categories">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="slug" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="parent_id" type="BIGINT">
                <constraints nullable="true" 
                             foreignKeyName="fk_category_parent" 
                             referencedTableName="categories" 
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>